<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cgeoWear"
    tools:deviceIds="wear_round">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		app:layout_box="all">

		<TextView
			android:id="@+id/textview_geocode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"/>

		<TextView
			android:id="@+id/textview_distance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="@dimen/distance_text_margin_end"/>

		<TextView
			android:id="@+id/textview_cache_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:gravity="center"
			android:ellipsize="marquee"
			android:scrollHorizontally="true"/>

		<ImageView
			android:id="@+id/compass"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/textview_distance"
			android:layout_above="@id/textview_cache_name"
			android:padding="@dimen/compass_padding"
			android:src="@drawable/directional_compass"
			android:contentDescription="@string/description_compass"
			android:adjustViewBounds="true"/>

	</RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>
